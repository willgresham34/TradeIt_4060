<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvItemDetailName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvItemDetailCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvItemDetailPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price or Free"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/tvItemDetailSeller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seller"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/tvItemDetailPostedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Posted date"
            android:layout_marginTop="4dp" />

        <Button
            android:id="@+id/btnAcceptBuy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accept / Buy"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>
