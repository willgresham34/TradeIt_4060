<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvPendingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pending Transactions"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPendingEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No pending transactions."
            android:visibility="gone"
            android:layout_marginTop="4dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPendingTransactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#CCCCCC" />

        <TextView
            android:id="@+id/tvCompletedTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Completed Transactions"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvCompletedEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No completed transactions yet."
            android:visibility="gone"
            android:layout_marginTop="4dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCompletedTransactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
